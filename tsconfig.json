{
  "compilerOptions": {
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": ".cache/tsbuild",
    "target": "ES2021",
    "module": "node16",
    "moduleResolution": "node16",
    "lib": ["ES2021", "DOM"],
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
